package RepetitionandSelection;

import java.util.Scanner;

public class BankPassword {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
        Scanner sc = new Scanner (System.in);
        
        int p;
        
        for (p=1; p<=3; p++) {
            System.out.print("Enter your pin number : ");
            int Pin = sc.nextInt();
            
        int pin = 123456;
        	
        if (Pin==pin) {
        	System.out.print("Your pasword is CORRECT");
        break; }
        
        else {
        	System.out.print("Your password are WRONG! Please enter again");
        }
        
        System.out.println();
        
        if (p>=3)
        	System.out.print("Sorry you have to wait for 5 minutes to enter your pin again");
        }
	}
}
